<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejemplo_2_Transaction.TransactionMainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/addA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Add A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/removeA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove A"
            app:layout_constraintBottom_toBottomOf="@+id/addA"
            app:layout_constraintStart_toEndOf="@+id/addA"
            app:layout_constraintTop_toTopOf="@+id/addA"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/addB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add B"
            app:layout_constraintBottom_toBottomOf="@+id/removeA"
            app:layout_constraintStart_toEndOf="@+id/removeA"
            app:layout_constraintTop_toTopOf="@+id/removeA"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/removeB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove B"
            app:layout_constraintBottom_toBottomOf="@+id/addB"
            app:layout_constraintStart_toEndOf="@+id/addB"
            app:layout_constraintTop_toTopOf="@+id/addB"
            app:layout_constraintVertical_bias="1.0" />
    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frameLayoutTransaction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bienvenido"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayoutTransaction"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />
</android.support.constraint.ConstraintLayout>